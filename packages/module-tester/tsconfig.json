{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitAny": false,
    "target": "ES2022",
    "strict": true,
    "moduleResolution": "NodeNext",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
