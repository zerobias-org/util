{
  "name": "@zerobias-org/util-api-client-base",
  "version": "1.0.32",
  "description": "Base classes and utilities for platform API clients",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/ docs/",
    "transpile": "tsc -b",
    "docs:typedoc": "typedoc --out docs/api src/index.ts",
    "docs": "npm run docs:typedoc",
    "build": "npm run lint && npm run transpile && npm run docs",
    "nx:build": "npm run transpile && npm run docs",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "echo 'No tests defined'"
  },
  "files": [
    "dist/src",
    "docs/api",
    "CHANGELOG.md"
  ],
  "keywords": [
    "hub",
    "api-client",
    "base",
    "connector"
  ],
  "author": "ZeroBias <support@zerobias.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerobias-org/util",
    "directory": "packages/api-client-base"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@zerobias-org/util-api-invoker-api": "^1.0.25",
    "@zerobias-org/util-api-invoker-isomorphic": "^1.0.26"
  }
}
