{
  "name": "@zerobias-org/logger",
  "version": "2.0.2",
  "description": "ZeroBias Logger - standard logging for all services",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha --inline-diffs --reporter=list test/unit/**/*.ts",
    "prepublishOnly": "npx nx run @zerobias-org/logger:build"
  },
  "files": [
    "dist/src",
    "CHANGELOG.md"
  ],
  "keywords": [
    "logger",
    "winston"
  ],
  "author": "ZeroBias <support@zerobias.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zerobiasorg/util",
    "directory": "packages/logger"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "winston": "^3.2.0",
    "winston-transport": "^4.9.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^4.5.0",
    "mocha": "^11.7.5",
    "tsx": "^4.21.0"
  }
}
