{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "Bundler",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "allowJs": true,
    "declaration": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "generated/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
