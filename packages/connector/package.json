{
  "name": "@zerobias-org/util-connector",
  "version": "1.0.22",
  "description": "TypeScript connector implementation for hub and modules utilizing hub",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/ .docs/",
    "transpile": "tsc -b",
    "build": "npm run lint && npm run transpile",
    "nx:build": "npm run transpile",
    "test": "npm run test:unit",
    "test:unit": "node --import tsx/esm ../../node_modules/mocha/bin/mocha.js --exit --extensions ts --inline-diffs --reporter=list test/unit/**/*.ts",
    "test:watch": "npm run test -- --watch --reporter=min",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "author": "team@zerobias.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:zerobias-org/util.git",
    "directory": "packages/connector"
  },
  "publishConfig": {
    "registry": "https://pkg.zerobias.org/"
  },
  "files": [
    "dist/src",
    "*.md"
  ],
  "dependencies": {
    "@zerobias-org/logger": "^2.0.25"
  }
}
