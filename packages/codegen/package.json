{
  "name": "@zerobias-org/util-codegen",
  "description": "OpenAPI Generator for models and server apis",
  "version": "2.0.18",
  "type": "module",
  "author": "team@zerobias.com",
  "license": "ISC",
  "bin": {
    "hub-generator": "./bin/hub-generator.js"
  },
  "exports": {
    ".": {
      "import": "./bin/hub-generator.js",
      "default": "./bin/hub-generator.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zerobias-org/util.git",
    "directory": "packages/codegen"
  },
  "publishConfig": {
    "registry": "https://pkg.zerobias.org/"
  },
  "scripts": {
    "clean": "rimraf bin/*.jar generated dist && ./gradlew :clean",
    "copyDeps": "cp build/libs/hub-module-codegen-*.jar bin/hub-module-codegen.jar && cp build/dependencies/openapi-generator-cli-*.jar bin/openapi-generator-cli.jar",
    "compile": "./gradlew :build",
    "build": "npm run compile && npm run copyDeps",
    "nx:build": "npm run compile && npm run copyDeps",
    "generate:test": "./bin/hub-generator.js generate -g hub-module -i ./api.yml -o generated -p modulePackage=../../src",
    "generate:server:test": "./bin/hub-generator.js generate -g hub-module-server -i ./api.yml -o generated/ -p modulePackage=../../src",
    "test:regression": "npm run build && mocha --inline-diffs --reporter=list test/unit/**/*.ts",
    "test": "npm run generate:test"
  },
  "files": [
    "bin/",
    "bom.json"
  ],
  "keywords": [
    "hub",
    "hub-module",
    "codegen",
    "openapi",
    "generator"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@zerobias-org/util-connector": "^1.0.15"
  }
}
